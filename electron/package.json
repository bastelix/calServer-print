{
  "name": "calserver-labeltool",
  "version": "1.0.0",
  "description": "Streamlit-basierte Desktop-App zum Drucken von Kalibrierlabels mit QR-Code",
  "author": "Ren√© Buske <admin@calhelp.de>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.calserver.labeltool",
    "productName": "calServer Labeltool",
    "directories": {
      "output": "release"
    },
    "files": [
      "../dist/labeltool.exe",
      "**/*"
    ],
    "extraResources": [
      {
        "from": "../dist/labeltool.exe",
        "to": "labeltool.exe"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}
